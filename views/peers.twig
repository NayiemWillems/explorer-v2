{% extends 'layout_main.twig' %}

{% block body %}
	{% include 'layout_header_explorer.twig' %}
	<div class="container" style="margin-top:50px;margin-bottom:50px;">
			<div class="header-title">
				<h1>Peers</h1>
			</div>


	<div class="card">
		<div class="table-responsive">
			<table class="table table-bordered table-hover table-striped mb-4"><br>
				<table class="table table-sm table-striped">
					<thead>
						<tr>
							<th scope="col">IP</th>
							<th scope="col">P2P-Port</th>
							<th scope="col">Version</th>
							<th scope="col">Height</th>
							<th scope="col">Latency</th>
						</tr>
					</thead>
					<tbody id='peers'></tbody>
				</table>
			</div>
		</div>
	</div>
	</div>
</div>{% endblock %}{% block javascripts %}

<script>

	$(document).ready(function () {

var socket = io();

socket.emit('getpeers', {});

socket.on('showpeers', function (data) {

var mainTable = document.getElementById("peers");

var tr,
td;

data.forEach(function (row) {

tr = document.createElement("tr");

td = document.createElement("td");
td.innerHTML = row.peerip;
tr.appendChild(td);

td = document.createElement("td");
td.innerHTML = row.p2pport;
tr.appendChild(td);

td = document.createElement("td");
td.innerHTML = row.version;
tr.appendChild(td);

td = document.createElement("td");
td.innerHTML = row.height;
tr.appendChild(td);

td = document.createElement("td");
td.innerHTML = row.latency;
tr.appendChild(td);


peers.appendChild(tr);

});

});

});
</script>
<script src="/plugins/jvector/jvector_script.js"></script>{% endblock %}
